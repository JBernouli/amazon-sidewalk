    condition:
      - sl_sidewalk_radio_native
  - path: "sources/projects/sid/sal/silabs/sid_pal/gpio.c"
  - path: "sources/projects/sid/sal/silabs/sid_pal/assert.c"
  - path: "sources/projects/sid/sal/silabs/sid_pal/common.c"
